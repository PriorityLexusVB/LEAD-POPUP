{
  "firestore": [
    {
      "database": "(default)",
      "rules": "firestore.rules"
    },
    {
      "database": "leads",
      "rules": "firestore.rules"
    }
  ],
  "functions": [
    {
      "source": "lead-pop-up",
      "codebase": "lead-pop-up",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint -- --fix"
      ]
    }
  ]
}
