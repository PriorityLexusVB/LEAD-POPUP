rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reads from the email_leads collection for any signed-in user.
    // This allows your web app to display the leads.
    // Writes are denied, only your backend function can create new leads.
    match /email_leads/{leadId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
