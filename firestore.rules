rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Read: staff only (Google sign-in; allowlist by email domain).
    match /leads_v2/{id} {
      allow read: if request.auth != null &&
                  request.auth.token.email.matches('.*@priorityauto\\.com$');
      // Writes come from backend only (Admin SDK / Cloud Functions)
      allow write: if false;
    }
    match /{document=**} { allow read, write: if false; }
  }
}
