rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read from the email_leads collection.
    // In a production app, you would want to restrict this further,
    // for example: allow read: if request.auth != null;
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false; // Protect against client-side writes for now
    }
  }
}
