rules_version = '2';

service cloud.firestore {
  // Explicitly target the 'leads' database
  match /databases/leads/documents {
    // Allow read/write access only on the email_leads collection
    match /email_leads/{leadId} {
      allow read, update, create: if request.auth != null; // Secure rule: Allow authenticated users
      allow list: if request.auth != null; // Allow authenticated users to list leads
    }
  }
}
