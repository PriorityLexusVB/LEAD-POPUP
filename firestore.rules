
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to the email_leads collection for any client.
    // Writes are denied to prevent tampering from the browser.
    // The Cloud Function uses admin privileges and bypasses these rules.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
