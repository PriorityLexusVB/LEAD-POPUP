
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to leads, but restrict writes to backend functions.
    // This is secure because only your Cloud Function can modify the data.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false; // Deny client-side writes
    }

    // Default deny all other reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
