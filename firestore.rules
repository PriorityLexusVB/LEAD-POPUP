rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to the email_leads collection for the web app
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false; // Only the backend function can write
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
