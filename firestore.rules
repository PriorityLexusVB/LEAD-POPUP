rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow the web app to read from the email_leads collection.
    // This allows the frontend to display the leads.
    // Writes are still blocked from the client-side for security.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
