rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the leads_v2 collection
    match /leads_v2/{leadId} {
      allow read, write: if true;
    }

    // Allow public read access to unparsed_leads
    match /unparsed_leads/{leadId} {
      allow read: if true;
      allow write: if true; // Or tighten as needed
    }
  }
}
