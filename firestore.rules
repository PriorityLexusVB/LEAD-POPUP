
rules_version = '2';

service cloud.firestore {
  // Lock down the default database
  match /databases/(default)/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }

  // Explicitly open read access for the 'leads' database
  match /databases/leads/documents {
    // Allow client-side read access to the leads_v2 collection
    match /leads_v2/{leadId} {
      allow read: if true;
      allow write: if false;
    }
    // Deny access to any other collections in the 'leads' database
    match /{path=**}/documents/{document} {
        allow read, write: if false;
    }
  }
}
