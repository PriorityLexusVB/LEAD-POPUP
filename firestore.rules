
rules_version = '2';

service cloud.firestore {
  // Rules for the default database
  match /databases/(default)/documents {
    // Deny all access to the default database by default
    match /{document=**} {
      allow read, write: if false;
    }
  }

  // Rules for the 'leads' database
  match /databases/leads/documents {
    // Allow reads on the leads_v2 collection for authenticated users
    match /leads_v2/{leadId} {
      allow read: if request.auth != null;
      allow write: if false; // Keep writes restricted to the backend
    }

    // Deny access to other collections in the 'leads' database
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
