rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any client to read from the leads_v2 collection,
    // but does not allow them to write. This is what your app needs.
    match /leads_v2/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // This rule allows updating the status and suggestion fields on a lead.
    match /leads_v2/{leadId} {
      allow update: if request.resource.data.status != resource.data.status || request.resource.data.suggestion != resource.data.suggestion;
    }
  }
}
