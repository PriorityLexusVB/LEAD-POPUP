
rules_version = '2';

service cloud.firestore {
  // Rule for the default database
  match /databases/(default)/documents {
    // Default-deny all access to the default database
    match /{document=**} {
      allow read, write: if false;
    }
  }

  // Rule for the 'leads' database
  match /databases/leads/documents {
    // Allow reads on the leads_v2 collection
    match /leads_v2/{leadId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes
    }

    // Deny access to all other collections in the 'leads' database
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
