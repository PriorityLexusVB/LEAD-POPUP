
rules_version = '2';

service cloud.firestore {
  // IMPORTANT: This rule applies to the 'leads' database specifically.
  match /databases/leads/documents {
    // This rule allows read access to the email_leads collection for any
    // authenticated user. This is secure for this application because
    // the data is not sensitive and the app is behind an auth wall.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes for security.
    }
  }
}
