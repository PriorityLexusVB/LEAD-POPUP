rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the leads_v2 collection for prototyping
    match /leads_v2/{leadId} {
      allow read, write;
    }

    // Allow access to any other collections if needed for other features.
    // For now, we are only explicitly allowing leads_v2
    match /{document=**} {
      allow read, write: if false; // Default to deny for all other collections
    }
  }
}
