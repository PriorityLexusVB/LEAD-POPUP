rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all client access. Reads happen via a secure API route.
    // Writes happen via Cloud Functions (ingest) or Admin SDK (actions).
    match /leads_v2/{id} {
      allow read: if false;
      allow write: if false;
    }
    // Default deny all other collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
