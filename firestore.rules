rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow the web app to READ from the email_leads collection,
    // but not write to it. The Cloud Function will handle writes.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
