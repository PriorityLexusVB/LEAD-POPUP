rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access to documents by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow client-side read access only to the 'email_leads' collection.
    // Writes are still disallowed from the client to prevent tampering.
    // The Cloud Function has admin privileges and can bypass these rules to write leads.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
