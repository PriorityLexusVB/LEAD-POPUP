rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to locked down
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow client-side read access to the email_leads collection.
    // This allows the web application to display the leads.
    // Writes are still disallowed to prevent modification from the client.
    match /email_leads/{leadId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
